<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.12thDreamApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/fb_navy</item>
        <item name="colorPrimaryVariant">@color/fb_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/fb_light_blue</item>
        <item name="colorSecondaryVariant">@color/fb_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Dialog theme -->
    <style name="CustomDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/fb_navy</item>
        <item name="colorAccent">@color/fb_accent</item>
    </style>

    <!-- Button style -->
    <style name="PlayerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/fb_navy</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="PlayerSelectionButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerAddButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/player_add_button_background</item>
        <item name="android:src">@drawable/ic_add_player</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
